<% layout('layouts/boilerplate') %>

<h2>Available Campgrounds</h2>
<!-- <a href="/campgrounds/new">Create new Camp</a> -->
<div class="mb-3">
  <% for (let camp of camps ) { %>
  <div class="card" mb-3>
    <div class="row">
      <div class="col-md-4">
        <img class="img-fluid" src="<%=camp.image %>" alt="" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= camp.title%></h5>
          <p class="card-text"><%= camp.description%></p>
          <p class="card-text">
            <small class="text-muted"><%= camp.location%></small>
          </p>
          <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary"
            >View</a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
